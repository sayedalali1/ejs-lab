<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>
</head>
<body>


<%- include('./partial/nav')  %>
    <h1>Full Menu</h1>
<ul>

    <h2>Mains</h2>
   <% resturant.menu.forEach((item) => { %>
    <% if( item.category === 'mains') { %>
     <h3> <%= item.name  %> </h3>
    <p>Price: <%= item.price  %> </p>
    <p>Rating: <%= item.rating  %> </p>
    <p>Details: <%= item.details  %> </p>  
   <% } %>

    <% }) %>

    <h2>Dessert</h2>
    <% resturant.menu.forEach((item) => { %>
     <% if( item.category === 'desserts') { %>
      <h3> <%= item.name  %> </h3>
     <p>Price: <%= item.price  %> </p>
     <p>Rating: <%= item.rating  %> </p>
     <p>Details: <%= item.details  %> </p>  
    <% } %>
 
     <% }) %>

     <h2>Sides</h2>
     <% resturant.menu.forEach((item) => { %>
      <% if( item.category === 'sides') { %>
       <h3> <%= item.name  %> </h3>
      <p>Price: <%= item.price  %> </p>
      <p>Rating: <%= item.rating  %> </p>
      <p>Details: <%= item.details  %> </p>  
     <% } %>
  
      <% }) %>
</ul>  
</body>
</html>